<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/poppins_bold"
        android:text="University"
        android:textFontWeight="600"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="333dp"
        android:layout_height="24dp"
        android:paddingLeft="4dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins_light"
        android:text="Name of your University:"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/signup3_nameofuni"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="10dp"
        android:background="?attr/editTextBackground"
        android:fontFamily="@font/poppins_light"
        android:hint="Name of your University"
        android:textFontWeight="500"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <Button
        android:id="@+id/signup3_create"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="57dp"
        android:layout_marginRight="16dp"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/button_color"
        android:fontFamily="@font/poppins_light"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textFontWeight="600"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup3_nameofuni" />
</androidx.constraintlayout.widget.ConstraintLayout>